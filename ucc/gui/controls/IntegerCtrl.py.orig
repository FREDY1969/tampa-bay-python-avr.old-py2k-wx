r'''Control for integer word values'''

import wx


#CheckBox  	__init__(self, parent, id, label, pos, size, style, validator, name)
#Creates and shows a CheckBox control

#Control  	__init__(self, parent, id, pos, size, style, validator, name)
#Create a Control.


class IntegerCtrl(wx.Window):
    def __init__(self, parent, question, label):
        wx.Window.__init__(self, parent)
        
        self.parent = parent
        self.question = question
        self.label = label
        
        self.value = None # question.value
        self.paintControl()
    
    def paintControl(self):
        #wx.CheckBox(self, wx.ID_ANY, self.label)
        wx.StaticText(self,wx.ID_ANY, self.label)
    
    def getValue(self):
        return self.value
